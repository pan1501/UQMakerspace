<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workshop_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView_workshop_image"
        android:layout_width="227dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/ic_eait_instrumetation"
        tools:ignore="UnknownId"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp" />

    <TextView
        android:id="@+id/textView_workshop_name"
        android:layout_width="228dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView_workshop_image"
        android:layout_marginStart="10dp"
        android:text="TextView"
        android:textSize="18sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/button_workshop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:text=" View Details"
        android:layout_alignParentRight="true" />
</RelativeLayout>